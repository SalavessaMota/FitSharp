@model FitSharp.Models.CreateGroupClassViewModel
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-6 offset-md-3 transparent-card">

        <h4>Choose class details</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InstructorId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" asp-items="Model.Rooms" class="form-control"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClassTypeId" class="control-label"></label>
                <select asp-for="ClassTypeId" asp-items="Model.ClassTypes" class="form-control"></select>
                <span asp-validation-for="ClassTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="StartTime">Start Time:</label>
                <input type="datetime-local" id="StartTime" asp-for="StartTime"
                       value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                       min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Informations" class="control-label">Informations (Optional)</label>
                <textarea asp-for="Informations" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Informations" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary roundedwithshadow" />
                <a asp-action="Index" style="background-color: #808080" class="btn btn-success roundedwithshadow">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}