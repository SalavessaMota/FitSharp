@model IEnumerable<FitSharp.Data.Entities.GroupClass>

@{
    ViewData["Title"] = "CustomerPastGroupClasses";
    var loggedInCustomerId = ViewBag.LoggedInCustomerId; // Supondo que o ID do customer logado é passado via ViewBag
}

<div class="row">
    <div class="col-12">
        <div class="card transparent-card">
            <div class="card-header">
                <h3 class="card-title">Group Classes</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>Class</th>
                            <th>Room</th>
                            <th>Instructor</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                // Verifica se o usuário logado é um dos customers da GroupClass
                                var loggedInCustomer = item.Customers?.FirstOrDefault(c => c.Id == loggedInCustomerId);
                                if (loggedInCustomer != null)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Room.Name)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Instructor.User.FullName)
                                            <br />
                                            @{
                                                // Procura uma review do usuário logado para o instrutor
                                                var review = item.Instructor.Reviews?.FirstOrDefault(r => r.CustomerId == loggedInCustomerId);
                                            }

                                            @if (review != null)
                                            {
                                                <!-- Exibe botão para editar a review existente -->
                                                <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.Id" class="btn btn-link">
                                                    <i class="far fa-edit ml-0"></i> Edit Review
                                                </a>
                                            }
                                            else
                                            {
                                                <!-- Exibe botão para fazer uma nova review -->
                                                <a asp-controller="Reviews" asp-action="WriteReview" asp-route-instructorId="@item.Instructor.Id" class="btn btn-link">
                                                    <i class="far fa-edit ml-0"></i> Write Review
                                                </a>
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                                        <td>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No group classes found for this customer.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <a href="~/Home/index" class="btn btn-primary btn-lg mt-3 roundedwithshadow"><i class="fas fa-home"></i> Return Home</a>
            </div>
        </div>
    </div>
</div>
