@model FitSharp.Data.Entities.GroupClass
@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <style>
        body {
            background: url('https://aircinelmvc.blob.core.windows.net/resources/fitsharp2.jpg') no-repeat center center fixed;
            background-size: cover;
        }
    </style>
}


<div class="transparent-card">

    <h1>Group Class Details</h1>
    <hr />

    <dl class="row">
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-6">
            Gym
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Room.Gym.Name)
        </dd>

        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.RoomId)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Room.Name)
        </dd>

        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.ClassTypeId)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.ClassType.Name)
        </dd>

        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.InstructorId)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Instructor.User.FullName) ( @Html.DisplayFor(model => model.Instructor.User.Email) )
        </dd>

        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Informations)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Informations)
        </dd>
    </dl>


    <div>
        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Instructor"))
        {
            <a asp-action="Index" style="background-color: #808080" class="btn btn-success roundedwithshadow">Back to List</a>
        }
        else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Customer"))
        {
            <a asp-action="CustomerGroupClasses" asp-route-username="@User.Identity.Name" style="background-color: #808080" class="btn btn-success roundedwithshadow">Back to List</a>

        }
    </div>

</div>

