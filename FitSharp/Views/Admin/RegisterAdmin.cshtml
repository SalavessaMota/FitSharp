@model FitSharp.Models.AdminRegisterNewAdminViewModel
@{
    ViewData["Title"] = "RegisterAdmin";
}

<div class="row">
    <div class="col-md-4 offset-md-4 transparent-card">

        <h2>Register New Admin</h2>


        <div class="text-success text-center mt-3">
            <h6>
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success" id="successMessage">
                        @ViewBag.SuccessMessage
                    </div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" id="errorMessage">
                        @ViewBag.ErrorMessage
                    </div>
                }
            </h6>
        </div>


        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>


            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId" asp-items="Model.Countries" class="form-control"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" asp-items="Model.Cities" class="form-control"></select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="AdminPassword">Admin Secret Password</label>
                <input asp-for="AdminPassword" class="form-control" type="password" />
                <span asp-validation-for="AdminPassword" class="text-warning"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Register New Employee" class="btn btn-primary roundedwithshadow" />
                <a asp-action="Index" class="btn btn-success roundedwithshadow"><i class="fas fa-list"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script type="text/javascript">
        $(document).ready(function () {
            // Verificar se há mensagens de sucesso ou erro
            var successMessage = '@ViewBag.SuccessMessage';
            var errorMessage = '@ViewBag.ErrorMessage';

            // Se houver uma mensagem de sucesso, exibi-la e definir um tempo para desaparecer
            if (successMessage) {
                $('#successMessage').fadeIn().delay(5000).fadeOut();
            }

            // Se houver uma mensagem de erro, exibi-la e definir um tempo para desaparecer
            if (errorMessage) {
                $('#errorMessage').fadeIn().delay(5000).fadeOut();
            }

            // Evento de mudança de país para carregar as cidades
            $("#CountryId").change(function () {
                $("#CityId").empty();
                $("#CityId").append('<option value="0">(Select a city...)</option>');

                $.ajax({
                    url: '@Url.Action("GetCitiesAsync", "Account")',
                    type: 'POST',
                    dataType: 'json',
                    data: { countryId: $("#CountryId").val() },
                    success: function (response) {
                        console.log("Cities response: ", response);

                        var cities = response || [];

                        if (cities.length > 0) {
                            $.each(cities, function (i, city) {
                                if (city.id && city.name) {
                                    $("#CityId").append('<option value="' + city.id + '">' + city.name + '</option>');
                                } else {
                                    console.warn("City data is incomplete or undefined: ", city);
                                }
                            });
                        } else {
                            console.warn("No cities found in the response.");
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error in AJAX request: ", error);
                    }
                });

                return false;
            });
        });
    </script>
}


