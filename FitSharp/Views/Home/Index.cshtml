@model IEnumerable<FitSharp.Data.Entities.Instructor>
<!-- Video Background -->
<video id="bgVideo" autoplay loop muted preload="auto" style="width: 100%; height: 100vh; object-fit: cover;">
    <source src="https://aircinelmvc.blob.core.windows.net/resources/backgroundvideofitsharp2.mp4" type="video/mp4">
    Your browser does not support videos in HTML5.
</video>

<!-- Overlay Section -->
<div class="transparent-card" style="position: relative; z-index: 1; padding-top: 5rem;">
    <!-- Welcome Section -->
    <div class="wider-container text-center mt-5">
        <h1 class="display-3 font-weight-bold">Welcome to FitSharp</h1>
        <p class="lead">Transform your fitness journey with personalized classes and expert trainers.</p>

        <!-- Free Trial Campaign Banner -->
        <div class="transparent-card">
            <div class="mt-4 mb-5 p-4 text-dark rounded" style="font-size: 1.2rem;">
                <strong>Special Offer:</strong> Sign up today and get a <strong>Free Trial Membership!</strong>
                <br/>Enjoy access to <strong>2 classes</strong> over a 1-month period. Join us now to kickstart your fitness journey!
            </div>

            @if (!User.Identity.IsAuthenticated)
            {
                <a href="/Account/Register" class="btn btn-primary btn-lg mt-3 mb-5">Join Us</a>
            }
        </div>
        
    </div>

    <!-- Features Section -->
    <div class=" wider-container text-center mt-5">
        <div class="row mb-5">
            <div class="col-md-4">
                <i class="fas fa-dumbbell fa-3x text-logo-primary mb-3"></i>
                <h3>Personalized Training</h3>
                <p>Classes tailored to your fitness level, whether beginner or pro.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-heartbeat fa-3x text-logo-primary mb-3"></i>
                <h3>Wellness Focus</h3>
                <p>Balance fitness and wellness with our comprehensive approach.</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-calendar-alt fa-3x text-logo-primary mb-3"></i>
                <h3>Flexible Schedules</h3>
                <p>Find classes that fit your schedule, making fitness convenient.</p>
            </div>
        </div>
    </div>

    <!-- Our Instructors Section -->
    <div class=" wider-container mt-5 text-center">
        <h2 class="display-4 mb-4 text-logo-primary">Meet Our Expert Instructors</h2>
        <div class="row">
            @* Exemplos de Instrutores (substituir com conteúdo dinâmico no futuro) *@
            @foreach (var instructor in Model.Take(3))
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@instructor.User.ImageFullPath" class="card-img-top" alt="@instructor.User.FullName" style="height: 286px; object-fit: cover;">
                        <div class="card-body">
                            <h4 class="card-title">@instructor.User.FullName</h4>
                            <h5 class="text-muted">@instructor.Speciality</h5>
                            <p class="card-text">@instructor.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a href="/home/OurInstructors" class="btn btn-primary btn-lg mt-3 mb-5">View All Instructors</a>
    </div>

    <!-- Popular Classes Section -->
    <div class=" wider-container mt-5 text-center">
        <h2 class="display-4 mb-4 text-logo-primary">Popular Classes</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <img src="https://aircinelmvc.blob.core.windows.net/resources/fitsharp1.jpg" class="card-img-top" alt="Personal Training" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h4 class="card-title">Personal Classes</h4>
                        <p>Get one-on-one sessions tailored to your needs.</p>
                        <a href="/Home/PersonalClassesInfo" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <img src="https://aircinelmvc.blob.core.windows.net/resources/fitsharp2.jpg" class="card-img-top" alt="Group Classes" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h4 class="card-title">Group Classes</h4>
                        <p>Join others in high-energy classes for all fitness levels.</p>
                        <a href="/Home/GroupClassesInfo" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Membership Plans Section -->
    <div class="wider-container mt-5 text-center">
        <h2 class="display-4 mb-4 text-logo-primary">Choose Your Membership</h2>
        <div class="row">
            <!-- Basic Plan -->
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">Basic</h4>
                        <p>Basic Plan: Access to 8 classes per month and unlimited use of gym equipment.</p>
                        <p class="text-success">$40.00/month</p>
                        <a href="/Memberships/AvailableMemberships" class="btn btn-outline-primary">Get Started</a>
                    </div>
                </div>
            </div>

            <!-- Premium Plan -->
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">Premium</h4>
                        <p>Premium Plan: Access to 16 classes per month and unlimited use of gym equipment, ideal for a more intense routine.</p>
                        <p class="text-success">$70.00/month</p>
                        <a href="/Memberships/AvailableMemberships" class="btn btn-outline-primary">Get Started</a>
                    </div>
                </div>
            </div>

            <!-- Ultimate Plan -->
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">Ultimate</h4>
                        <p>Ultimate Plan: Unlimited classes and unlimited use of gym equipment, perfect for clients seeking maximum flexibility and personalization.</p>
                        <p class="text-success">$90.00/month</p>
                        <a href="/Memberships/AvailableMemberships" class="btn btn-outline-primary">Get Started</a>
                    </div>
                </div>
            </div>

            <!-- Trial Plan -->
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h4 class="card-title">Trial</h4>
                        <p>Trial Membership: Access to 2 classes over a 1-month period. Simply register on our site to get started!</p>
                        <p class="text-success">Free</p>
                        <a href="/Account/Register" class="btn btn-outline-primary">Register Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Testimonials Section -->
    <div class="container mt-5">
        <h2 class="display-4 mb-4 text-center text-logo-primary">What Our Favorite Customers Say</h2>
        <div class="carousel slide" id="trainersCarousel" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0">"Training at FitSharp feels like working with clean, high-quality code – efficient, effective, and well-organized. Just like our members!"</p>
                        <footer class="blockquote-footer text-logo-primary">Rafael Santos, Customer</footer>
                    </blockquote>
                </div>
                <div class="carousel-item">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0">"With FitSharp, it's like we’ve achieved the perfect balance between aesthetics and functionality – the site looks amazing, and it just works!"</p>
                        <footer class="blockquote-footer text-logo-primary">Susana Pimentel, Customer</footer>
                    </blockquote>
                </div>
                <div class="carousel-item">
                    <blockquote class="blockquote text-center">
                        <p class="mb-0">"At FitSharp, we combine clean code principles with a sleek design. Whether in our classes or on the website, everything is optimized for the best user experience!"</p>
                        <footer class="blockquote-footer text-logo-primary">Ana Marta Grade, Customer</footer>
                    </blockquote>
                </div>
            </div>
            <a class="carousel-control-prev" href="#trainersCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#trainersCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

