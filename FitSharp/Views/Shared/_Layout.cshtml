@using Microsoft.AspNetCore.Identity

@inject FitSharp.Helpers.IUserHelper _userHelper
@inject FitSharp.Data.IUserRepository _userRepository

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitSharp</title>
    <link rel="icon" href="https://aircinelmvc.blob.core.windows.net/resources/fitsharpIconFinalNoBackground.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @inject UserManager<FitSharp.Entities.User> UserManager
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container wider-container">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FitSharp</a> *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://aircinelmvc.blob.core.windows.net/resources/FitSharpFinalLogoNoBrackgroundpng2.png" alt="LogoFitSharp" width="100" height="40" />
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-between">

                    <ul class="navbar-nav d-flex align-items-center">                        
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home mr-2 fa-lg"></i>@* Home *@
                            </a>
                        </li>

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin")) // If user is admin
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-cogs mr-1 fa-lg" aria-hidden="true"></i>Admin</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action=""><i class="fas fa-user-cog"></i>  Users</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Countries" asp-action=""><i class="fas fa-globe-europe mr-1"></i>  Countries/Cities</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Gyms" asp-action=""><i class="fas fa-dumbbell"></i>  Gyms</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Memberships" asp-action=""><i class="fas fa-money-check-alt"></i>  Memberships</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Reviews" asp-action=""><i class="fas fa-pencil-alt"></i>  Instructors Reviews</a></li>
                                </ul>
                            </li>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Employee")) // If user is employee
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-cogs fa-lg"></i> Management</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="ClassTypes" asp-action=""><i class="fas fa-chalkboard-teacher"></i> Class Types</a></li>
                                </ul>
                            </li>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Instructor")) // If user is instructor
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-cogs fa-lg"></i> Classes</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="PersonalClasses" asp-action=""><i class="fas fa-chalkboard-teacher"></i> Personal Classes</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="GroupClasses" asp-action=""><i class="fas fa-users"></i> Group Classes</a></li>
                                </ul>
                            </li>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Customer")) // If user is customer
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-cogs fa-lg"></i> Your Classes
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="PersonalClasses" asp-action="CustomerPersonalClasses" asp-route-username="@User.Identity.Name"><i class="fas fa-chalkboard-teacher"></i> Personal Classes</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="GroupClasses" asp-action="CustomerGroupClasses" asp-route-username="@User.Identity.Name"><i class="fas fa-users"></i> Group Classes</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-cogs fa-lg"></i> New Class
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="PersonalClasses" asp-action="UpcomingPersonalClasses"><i class="fas fa-chalkboard-teacher"></i> Personal Classes</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="GroupClasses" asp-action="UpcomingGroupClasses"><i class="fas fa-users"></i> Group Classes</a></li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Memberships" asp-action="AvailableMemberships">
                                    <i class="fas fa-pencil-alt"></i><span>  Get your Membership</span>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="DisplayQRCode" asp-route-userName="@User.Identity.Name">
                                    <i class="fas fa-qrcode fa-lg"></i><span> QR Code</span>
                                </a>
                            </li>
                        }

                        @if (this.User.Identity.IsAuthenticated && ( this.User.IsInRole("Admin") || this.User.IsInRole("Employee") || this.User.IsInRole("Instructor" ) ) )
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="CustomersInformations">
                                    <i class="fas fa-users"></i><span> Our Customers</span>
                                </a>
                            </li>
                        }


                    </ul>


                    <ul class="navbar-nav d-flex align-items-center">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            var user = await _userRepository.GetUserByEmailAsync(User.Identity.Name);

                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                            <li class="nav-item d-flex align-items-center text-dark">
                                <span>
                                    Welcome, 
                                    @{
                                        var userFullName = user.FullName.Length > 17 ? user.FullName.Substring(0, 17) + "..." : user.FullName; // Reduce full name length.
                                        @userFullName
                                    }
                                </span>
                                        @if (!string.IsNullOrEmpty(user?.ImageFullPath) && user.ImageFullPath != "https://aircinelmvc.azurewebsites.net/images/noimage.png")
                                        {
                                    <img src="@user.ImageFullPath" alt="Profile Picture" style="width: 35px; height: 35px; border-radius: 50%; margin-right: 10px; margin-left: 10px;" />
                                        }
                                        @* <i class="fas fa-user-circle mr-2 fa-lg"></i>@* Edit Account *@
                                </a>
                            </li>


                            <a class="nav-link text-dark" asp-controller="Notifications" asp-action="Index">
                                <i class="fa fa-bell" style="position: relative;">
                                    @if (this.User.Identity.IsAuthenticated)
                                    {
                                        var roleName = await _userHelper.GetRoleNameAsync(user);
                                        var notifications = _userRepository.GetNotifications(user.Id, roleName);
                                        var unreadNotifications = notifications.Count(n => !n.IsRead);
                                        if (unreadNotifications > 0)
                                        {
                                            <span style="position: absolute; top: -5px; right: -10px; background-color: red; color: white;
                                                        border-radius: 50%; padding: 3px 6px; font-size: 0.55em; line-height: 1;">@unreadNotifications</span>
                                        }
                                    }
                                </i>
                            </a>

                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt mr-2 fa-lg"></i>@* Logout *@
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt mr-2 fa-lg"></i>@* Login *@
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-user-secret mr-2 fa-lg"></i>@* Privacy *@
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container wider-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FitSharp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>