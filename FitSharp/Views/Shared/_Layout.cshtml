@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitSharp</title>
    <link rel="icon" href="https://aircinelmvc.blob.core.windows.net/resources/fitsharp.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @inject UserManager<FitSharp.Entities.User> UserManager
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container wider-container">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FitSharp</a> *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://aircinelmvc.blob.core.windows.net/resources/FitSharpPreLogoShort.png" alt="LogoFitSharp" width="auto" height="30" />
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-between">

                    <ul class="navbar-nav d-flex align-items-center">                        
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home mr-2"></i>@* Home *@
                            </a>
                        </li>

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin")) // If user is admin
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-cogs mr-1" aria-hidden="true"></i>Admin</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action=""><i class="fas fa-user-cog"></i>  Users</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Countries" asp-action=""><i class="fas fa-globe-europe mr-1"></i>  Countries/Cities</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Gyms" asp-action=""><i class="fas fa-dumbbell"></i>  Gyms</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Memberships" asp-action=""><i class="fas fa-money-check-alt"></i>  Memberships</a></li>

                                </ul>
                            </li>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Employee")) // If user is employee
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-cogs"></i> Management</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="ClassTypes" asp-action=""><i class="fas fa-chalkboard-teacher"></i> Class Types</a></li>
                                </ul>
                            </li>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Instructor")) // If user is instructor
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-cogs"></i> Management</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="PersonalClasses" asp-action=""><i class="fas fa-chalkboard-teacher"></i> Personal Classes</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="GroupClasses" asp-action=""><i class="fas fa-users"></i> Group Classes</a></li>
                                </ul>
                            </li>
                        }

                    </ul>


                    <ul class="navbar-nav d-flex align-items-center">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            var user = await UserManager.FindByNameAsync(User.Identity.Name);

                            <li class="nav-item d-flex align-items-center">
                                <li class="nav-item d-flex align-items-center text-dark">
                                    <span>Welcome, @user?.FullName</span>
                                </li>
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="ChangeUser">
                                    @if (!string.IsNullOrEmpty(user?.ImageFullPath) && user.ImageFullPath != "https://aircinelmvc.azurewebsites.net/images/noimage.png")
                                    {
                                        <img src="@user.ImageFullPath" alt="Profile Picture" style="width: 35px; height: 35px; border-radius: 50%; margin-right: 10px;" />
                                    }
                                    <i class="fas fa-user-circle mr-2"></i>@* Edit Account *@
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt mr-2"></i>@* Logout *@
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt mr-2"></i>@* Login *@
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-user-secret mr-2"></i>@* Privacy *@
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container wider-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FitSharp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

