@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card transparent-card border-danger">
                <div class="card-body">
                    <h1 class="text-danger">
                        <i class="fas fa-exclamation-triangle"></i> Oops! Something went wrong.
                    </h1>

                    @if (ViewBag.ErrorTitle == null)
                    {
                        <h2 class="text-danger">An error occurred while processing your request.</h2>
                    }
                    else
                    {
                        <h2 class="text-danger">@ViewBag.ErrorTitle</h2>
                        <p class="text-muted">@Html.Raw(ViewBag.ErrorMessage)</p>
                    }

                    <p class="mt-4">We apologize for the inconvenience. Please try again later or return to the home page.</p>

                    <a href="~/Home/index" class="btn btn-primary btn-lg mt-3 shadow-lg">
                        <i class="fas fa-home"></i> Return Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
