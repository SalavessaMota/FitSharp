@model FitSharp.Data.Entities.Room

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4 offset-md-4 transparent-card">
        <form asp-action="EditRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GymId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsVirtual" class="control-label"></label>
                <input asp-for="IsVirtual" class="form-control" />
                <span asp-validation-for="IsVirtual" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary roundedwithshadow" />
                <a asp-action="Details" asp-route-id="@Model.GymId"  style="background-color: #808080" class="btn btn-success roundedwithshadow">Back to gym details</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}