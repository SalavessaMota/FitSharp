@model FitSharp.Data.Entities.Equipment
@{
    ViewData["Title"] = "EditEquipment";
}

<h4>Equipment</h4>
<hr/>

<div class="row">
    <div class="col-md-4 offset-md-4 transparent-card">
        <form asp-action="EditEquipment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GymId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RequiresRepair" class="control-label"></label>
                <input asp-for="RequiresRepair" class="form-control" />
                <span asp-validation-for="RequiresRepair" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary roundedwithshadow" />
                <a asp-action="Details" asp-route-id="@Model.GymId" class="btn btn-success roundedwithshadow">Back to gym details</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

