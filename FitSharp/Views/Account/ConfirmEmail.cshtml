@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center shadow-lg">
                <div class="card-header bg-success text-white">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <p class="lead">Thank you for confirming your email! You can now log in to your account.</p>
                    <a href="~/Account/Login" class="btn btn-primary roundedwithshadow">Log In</a>
                </div>
            </div>
        </div>
    </div>
</div>
